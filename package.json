        "@types/jest": "^29.5.14",
        "@types/react": "^18.3.12",
        "@types/react-dom": "^18.3.1",
        "@types/webpack-env": "^1.18.5",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "babel-loader": "^9.2.1",
