{
    "name": "telegram-mini-template",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "start": "cross-env MOCK=true webpack serve --config webpack/webpack.dev.js",
        "build": "webpack --config webpack/webpack.prod.js",
        "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
        "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,json,css,md}'",
